<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="@dimen/navi_dimens_80dp">

    <TextView
        android:id="@+id/nsdk_driving_habit_item_title_tv"
        tools:text="拥堵时躲避习惯"
        android:textColor="@color/nsdk_route_sort_title"
        android:paddingLeft="@dimen/navi_dimens_15dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/navi_dimens_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nsdk_driving_habit_item_title_summary_tv"
        tools:text="(多选)"
        android:textColor="@color/nsdk_route_sort_summary_text"
        android:textSize="@dimen/navi_dimens_16dp"
        android:layout_toRightOf="@id/nsdk_driving_habit_item_title_tv"
        android:layout_marginLeft="@dimen/navi_dimens_8dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/nsdk_driving_habit_title_underline"
        style="@style/NavRGTRouteSortItemDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7"
        android:layout_height="1px"/>

</RelativeLayout>