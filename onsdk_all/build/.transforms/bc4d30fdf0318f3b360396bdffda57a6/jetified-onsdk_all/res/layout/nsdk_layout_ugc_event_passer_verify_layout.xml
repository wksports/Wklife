<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/nsdk_rg_transparent"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nsdk_cl_bg_d"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ugc_sub_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_81dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ugc_sub_title_iv"
                android:layout_width="@dimen/navi_dimens_41dp"
                android:layout_height="@dimen/navi_dimens_41dp"
                android:layout_marginLeft="@dimen/navi_dimens_15dp"
                android:scaleType="fitXY"
                android:src="@drawable/nsdk_ic_ugc_event_verify"/>

            <TextView
                android:id="@+id/ugc_sub_title_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navi_dimens_15dp"
                android:text="事件是否存在"
                android:maxLines="1"
                android:layout_toRightOf="@id/ugc_sub_title_iv"
                android:textColor="#333"
                android:textSize="@dimen/navi_dimens_18dp"/>

            <TextView
                android:id="@+id/ugc_verify_event_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ugc_sub_title_type_tv"
                android:layout_alignLeft="@id/ugc_sub_title_type_tv"
                android:layout_marginTop="@dimen/navi_dimens_3dp"
                android:maxLines="1"
                android:textColor="#333"
                tools:text="深圳市南山区"
                tools:visibility="visible"
                android:textSize="@dimen/navi_dimens_12dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/nsdk_ugc_report_view_line_height"
            android:background="#EAEAEA">
        </View>
        <LinearLayout
            android:id="@+id/ugc_navi_tips_button_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_15dp"
            android:layout_marginBottom="@dimen/navi_dimens_15dp"
            android:background="@color/nsdk_cl_bg_d"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ugc_event_verify_no_exist_btn"
                android:layout_width="@dimen/navi_dimens_0dp"
                android:layout_height="@dimen/navi_dimens_38dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/navi_dimens_12dp"
                android:layout_weight="1"
                android:background="@drawable/bnav_common_ugc_blue_corners_button_selector"
                android:text="不存在"
                android:textColor="@color/nsdk_ugc_report_blue_txt_btn_selector"
                android:textSize="@dimen/navi_dimens_15dp"/>

            <TextView
                android:id="@+id/ugc_event_verify_exist_btn"
                android:layout_width="@dimen/navi_dimens_0dp"
                android:layout_height="@dimen/navi_dimens_38dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/navi_dimens_12dp"
                android:layout_weight="1"
                android:background="@drawable/bnav_common_ugc_blue_corners_button_selector"
                android:text="存在"
                android:textColor="@color/nsdk_ugc_report_blue_txt_btn_selector"
                android:textSize="@dimen/navi_dimens_15dp"/>

            <TextView
                android:id="@+id/ugc_event_verify_add_progress_btn"
                android:layout_width="@dimen/navi_dimens_0dp"
                android:layout_height="@dimen/navi_dimens_38dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/navi_dimens_12dp"
                android:layout_marginRight="@dimen/navi_dimens_12dp"
                android:layout_weight="1"
                android:background="@drawable/bnav_common_ugc_blue_button_selector"
                android:text="补充进展"
                android:textColor="#ffffff"
                android:textSize="@dimen/navi_dimens_15dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>