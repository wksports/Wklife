<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/navi_dimens_32dp"
              android:divider="@drawable/transparent"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="horizontal">

    <RadioButton
        android:id="@+id/offline_data_undownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nsdk_tab_bar_btn_left"
        android:button="@null"
        android:checked="true"
        android:padding="@dimen/navi_dimens_6dp"
        android:text="@string/nsdk_string_od_offline_data_undownload"
        android:textColor="@color/nsdk_tab_bar_color_new"
        android:textSize="13sp"/>

    <RadioButton
        android:id="@+id/offline_data_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nsdk_tab_bar_btn_right"
        android:button="@null"
        android:checked="false"
        android:padding="@dimen/navi_dimens_6dp"
        android:text="@string/nsdk_string_od_offline_data_downloaded"
        android:textColor="@color/nsdk_tab_bar_color_new"
        android:textSize="13sp"/>

</LinearLayout>