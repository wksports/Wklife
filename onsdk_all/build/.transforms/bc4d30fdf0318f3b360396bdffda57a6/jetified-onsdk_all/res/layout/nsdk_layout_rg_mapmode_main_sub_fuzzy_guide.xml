<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/fuzzy_panel"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nsdk_rg_top_panel_height"
              android:background="@drawable/bnav_rg_guide_top_panel"
              android:visibility="visible"
              android:paddingTop="@dimen/nsdk_rg_guide_panel_shadow_top"
              android:paddingBottom="@dimen/nsdk_rg_guide_panel_shadow_bottom"
              android:orientation="horizontal"
              android:gravity="center_vertical"
>

    <ImageView
            android:id="@+id/fuzzy_logo"
            android:layout_width="@dimen/navi_dimens_57dp"
            android:layout_height="@dimen/navi_dimens_57dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/nsdk_rg_top_guide_turn_icon_margin"
            android:background="@drawable/bnav_drawable_set_off"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/fuzzy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navi_dimens_20dp"
            android:layout_marginRight="@dimen/navi_dimens_35dp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="2"
            android:textColor="@color/nsdk_rg_main_info"
            tools:text="请行驶到奎克东门，不然就去百度国际大厦,ssss"
            android:textSize="@dimen/navi_dimens_24dp"/>

</LinearLayout>

