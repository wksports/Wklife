<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/navi_dimens_276dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/navi_dimens_276dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/it_dialog_imageview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_115dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/it_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/it_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/navi_dimens_19dp"
                android:layout_marginLeft="@dimen/navi_dimens_19dp"
                android:layout_marginRight="@dimen/navi_dimens_19dp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/navi_dimens_7dp"
                android:textColor="@color/nsdk_cl_text_a"
                android:textSize="@dimen/navi_dimens_17dp"
                tools:text="途径隧道"/>

            <TextView
                android:id="@+id/it_dialog_content_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/navi_dimens_13dp"
                android:layout_marginLeft="@dimen/navi_dimens_19dp"
                android:layout_marginRight="@dimen/navi_dimens_19dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:lineSpacingExtra="@dimen/navi_dimens_7dp"
                android:textColor="@color/nsdk_cl_text_a"
                android:textSize="@dimen/navi_dimens_13dp"
                tools:text="百度智能定位为您持续导航">
            </TextView>

            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/navi_dimens_19dp"
                android:paddingRight="@dimen/navi_dimens_19dp"
                android:layout_marginTop="@dimen/navi_dimens_15dp"
                android:layout_marginBottom="@dimen/navi_dimens_19dp">

                <TextView
                    android:id="@+id/first_btn"
                    android:layout_width="@dimen/navi_dimens_109dp"
                    android:layout_height="@dimen/navi_dimens_32dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="取消"
                    android:visibility="visible"
                    android:textColor="@color/nsdk_color_dialog_content_text"
                    android:textSize="@dimen/navi_dimens_14dp" />

                <View
                    android:id="@+id/place_view"
                    android:layout_width="@dimen/navi_dimens_0dp"
                    android:layout_height="@dimen/navi_dimens_1dp"
                    android:layout_weight="1"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/second_btn"
                    android:layout_width="@dimen/navi_dimens_109dp"
                    android:layout_height="@dimen/navi_dimens_32dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/nsdk_color_dialog_content_text"
                    android:textSize="@dimen/navi_dimens_14dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>