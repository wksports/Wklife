<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/bnav_rg_bg_tool_box_loading"
    android:visibility="gone"
    tools:visibility="gone">

    <ProgressBar
        android:id="@+id/bnav_rg_toolbox_rp_watting_progress"
        style="@style/BNCommonProgressStyle"
        android:indeterminateDrawable="@drawable/nsdk_drawable_black_loading_progress"
        android:layout_width="@dimen/navi_dimens_21dp"
        android:layout_height="@dimen/navi_dimens_21dp"
        android:layout_marginLeft="@dimen/navi_dimens_21dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/bnav_rg_toolbox_rp_watting_tv"
        android:layout_width="@dimen/navi_dimens_0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_14dp"
        android:layout_marginRight="@dimen/navi_dimens_14dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/nsdk_cl_text_b_mm_single"
        android:textSize="@dimen/navi_dimens_16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bnav_rg_toolbox_rp_watting_cancle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/navi_dimens_18dp"
        android:paddingRight="@dimen/navi_dimens_18dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/nsdk_notification_quit_icon"/>

</LinearLayout>