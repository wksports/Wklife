<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floor_filter_brands"
    android:layout_width="@dimen/nsdk_rg_indoor_park_floor_filter_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:background="@drawable/bnav_common_cp_button_selector"-->

    <FrameLayout
        android:id="@+id/floor_start_arrow_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_13dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/floor_start_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/navi_dimens_1dp"
            android:scaleType="fitXY"
            android:src="@drawable/nsdk_nearby_search_up_arrow" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/floor_filter_brands_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_143dp"
        android:scrollbars="none">

    </androidx.recyclerview.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/floor_end_arrow_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_13dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/floor_end_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/navi_dimens_1dp"
            android:scaleType="fitXY"
            android:src="@drawable/nsdk_nearby_search_down_arrow" />
    </FrameLayout>
</LinearLayout>


