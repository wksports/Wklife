<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nsdk_rg_float_mesage_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_content"
            android:layout_width="@dimen/navi_dimens_280dp"
            android:layout_height="@dimen/navi_dimens_150dp"
            android:padding="@dimen/navi_dimens_22dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/navi_dimens_6dp"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="@dimen/navi_dimens_15dp">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/navi_dimens_5dp"
            android:layout_marginRight="@dimen/navi_dimens_5dp"
            android:background="#c9c9c9" />

        <TextView
            android:id="@+id/text_hide"
            android:layout_width="@dimen/navi_dimens_280dp"
            android:layout_height="@dimen/navi_dimens_45dp"
            android:padding="@dimen/navi_dimens_22dp"
            android:gravity="center"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/nsdk_rg_float_message_btn"
            android:textSize="18sp">
        </TextView>
    </LinearLayout>

</RelativeLayout>