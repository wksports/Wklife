<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/route_search_filter_fast_slow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navi_dimens_48dp"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/navi_dimens_9dp"
        android:background="@drawable/bnav_common_cp_button_selector"
        android:visibility="gone">

        <Button
            android:id="@+id/route_search_filter_category_fast"
            android:layout_width="@dimen/navi_dimens_48dp"
            android:layout_height="match_parent"
            android:text="快充"
            android:textSize="@dimen/navi_dimens_10dp"
            android:textColor="#333333"
            android:background="#ffffff"/>

        <Button
            android:id="@+id/route_search_filter_category_slow"
            android:layout_width="@dimen/navi_dimens_48dp"
            android:layout_height="match_parent"
            android:text="慢充"
            android:textSize="@dimen/navi_dimens_10dp"
            android:textColor="#333333"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/route_search_filter_brands"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navi_dimens_48dp"
        android:orientation="horizontal"
        android:background="@drawable/bnav_common_cp_button_selector">

        <FrameLayout
            android:id="@+id/route_search_start_arrow_layout"
            android:layout_width="@dimen/navi_dimens_13dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/route_search_start_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navi_dimens_1dp"
                android:layout_gravity="center"
                android:src="@drawable/nsdk_nearby_search_left_arrow"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/route_search_filter_brands_recycler_view"
            android:layout_width="@dimen/navi_dimens_143dp"
            android:layout_height="match_parent"
            android:scrollbars="none">

        </androidx.recyclerview.widget.RecyclerView>

        <FrameLayout
            android:id="@+id/route_search_end_arrow_layout"
            android:layout_width="@dimen/navi_dimens_13dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/route_search_end_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/navi_dimens_1dp"
                android:layout_gravity="center"
                android:src="@drawable/nsdk_nearby_search_right_arrow"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>