<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/energy_type_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/bnav_plate_input_panel_layout">

    <TextView
        android:id="@+id/displacement_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="排量"
        android:textColor="#333333"
        android:textSize="@dimen/navi_dimens_14dp" />

    <EditText
        android:id="@+id/plate_edit_placement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navi_dimens_81dp"
        android:maxLines="1"
        android:maxLength="5"
        android:digits="0123456789"
        android:inputType="number"
        android:textColor="#333333"
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColorHint="#999999"
        android:background="#00FFFFFF"
        android:hint="请输入排量" />

    <TextView
        android:id="@+id/plate_placement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navi_dimens_15dp"
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColor="#333333"
        android:layout_toRightOf="@id/plate_edit_placement"
        android:text="CC" />

    <TextView
        android:id="@+id/displacement_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navi_dimens_10dp"
        android:layout_toRightOf="@+id/plate_placement"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#FF5956"
        android:textSize="@dimen/navi_dimens_12dp"
        tools:text="车牌错误" />

</RelativeLayout>