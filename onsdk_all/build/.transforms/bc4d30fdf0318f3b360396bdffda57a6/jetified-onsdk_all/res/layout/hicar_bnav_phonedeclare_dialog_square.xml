<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#101623">

    <ScrollView
        android:id="@+id/bnav_declare_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/navi_dimens_17dp"
        android:layout_weight="1"
        >
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/navi_dimens_17dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bnav_declare_disagree"
            android:layout_width="@dimen/navi_dimens_144dp"
            android:layout_height="@dimen/navi_dimens_35dp"
            android:background="@drawable/hicar_alert_dialog_leftbutton"
            android:text="不同意"
            android:textColor="#AAB1C7"
            android:gravity="center"
            android:layout_marginRight="@dimen/navi_dimens_31dp"
            android:textSize="@dimen/navi_dimens_18dp"/>

        <TextView
            android:id="@+id/bnav_declare_agree"
            android:layout_width="@dimen/navi_dimens_144dp"
            android:layout_height="@dimen/navi_dimens_35dp"
            android:background="@drawable/hicar_alert_dialog_rightbutton"
            android:text="同意"
            android:layout_marginLeft="@dimen/navi_dimens_31dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="@dimen/navi_dimens_18dp" />
    </LinearLayout>

</LinearLayout>

