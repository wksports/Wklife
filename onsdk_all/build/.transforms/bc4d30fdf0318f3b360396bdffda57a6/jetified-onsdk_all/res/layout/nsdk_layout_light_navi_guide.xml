<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bnav_lv_rg_next_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            tools:text="50米"
            style="@style/LightGuidePanel" />

        <ImageView
            android:id="@+id/bnav_lv_rg_next_turn"
            android:layout_width="@dimen/navi_dimens_19dp"
            android:layout_height="@dimen/navi_dimens_19dp"
            android:layout_marginLeft="@dimen/navi_dimens_5dp"
            android:layout_marginRight="@dimen/navi_dimens_5dp"
            android:scaleType="centerInside"
            tools:src="@drawable/nsdk_ipo_turn_right" />

        <TextView
            android:id="@+id/bnav_lv_rg_next_road_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            style="@style/LightGuidePanel"
            tools:text="进入上地西路辅路" />
    </LinearLayout>
</RelativeLayout>
