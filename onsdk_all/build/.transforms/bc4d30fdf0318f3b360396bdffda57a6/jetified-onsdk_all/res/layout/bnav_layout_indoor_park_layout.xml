<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/indoor_park_floor_filter_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/indoor_park_bottombar_container"
        android:layout_marginLeft="@dimen/nsdk_rg_guide_panel_shadow_left"
        android:layout_marginBottom="@dimen/navi_dimens_20dp" />


    <!--百度地图logo-->
    <ImageView
        android:id="@+id/bnav_rg_baidu_map_logo"
        android:layout_width="@dimen/navi_dimens_46dp"
        android:layout_height="@dimen/navi_dimens_16dp"
        android:layout_above="@+id/indoor_park_bottombar_container"
        android:layout_marginLeft="@dimen/nsdk_rg_toolbox_margin_left"
        android:layout_marginBottom="@dimen/navi_dimens_6dp"
        android:src="@drawable/nsdk_baidu_map_logo"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/bnav_rg_indoor_fullview_group"
        android:layout_width="@dimen/nsdk_rg_control_panel_btn_width"
        android:layout_height="@dimen/nsdk_rg_control_panel_btn_height"
        android:layout_marginRight="@dimen/navi_dimens_4dp"
        android:layout_marginBottom="@dimen/navi_dimens_6dp"
        android:layout_above="@+id/indoor_park_bottombar_container"
        android:layout_alignParentRight="true"
        android:background="@drawable/nsdk_rg_selector_common_control_btn_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bnav_rg_indoor_fullview_iv"
            android:layout_width="@dimen/navi_dimens_28dp"
            android:layout_height="@dimen/navi_dimens_28dp"
            android:scaleType="centerInside"
            android:src="@drawable/nsdk_drawable_common_ic_fullview_mode" />

        <TextView
            android:id="@+id/bnav_rg_indoor_fullview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nsdk_rg_control_button_text_margin_top"
            android:gravity="center_horizontal"
            android:text="全览"
            android:textColor="@color/nsdk_cl_text_h"
            android:textSize="@dimen/nsdk_rg_control_panel_btn_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/indoor_park_bottombar_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nsdk_rg_bottom_panel_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/nsdk_rg_toolbox_margin_left" />

</RelativeLayout>