<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/navi_dimens_85dp"
    android:layout_height="@dimen/navi_dimens_85dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/location_share_member_list_item_head"
        android:layout_width="@dimen/navi_dimens_64dp"
        android:layout_height="@dimen/navi_dimens_64dp"
        android:layout_marginTop="-2dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/nsdk_drawable_location_share_invitation" />

    <TextView
        android:id="@+id/location_share_member_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:maxEms="4"
        android:maxLines="1"
        android:text="邀请"
        android:textColor="#333333" />
</LinearLayout>
