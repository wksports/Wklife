<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ugc_detail_post_comment_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/ugc_sub_photo_show_layout"
        android:layout_width="@dimen/navi_dimens_41dp"
        android:layout_height="@dimen/navi_dimens_41dp"
        android:layout_marginLeft="@dimen/navi_dimens_9dp"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ugc_sub_photo_show_iv"
            android:layout_width="@dimen/navi_dimens_41dp"
            android:layout_height="@dimen/navi_dimens_41dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ugc_sub_photo_show_play_video_iv"
            android:layout_width="@dimen/navi_dimens_20dp"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/nsdk_ugc_icon_play_small"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ugc_sub_info_fill_photo_iv"
            android:layout_width="@dimen/navi_dimens_41dp"
            android:layout_height="@dimen/navi_dimens_41dp"
            android:background="@drawable/nsdk_route_report_photo_bg"
            android:scaleType="centerInside"
            android:src="@drawable/nsdk_ugc_sub_info_fill_photo_icon"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/ugc_post_comment_submit_tv"
        android:layout_width="@dimen/navi_dimens_65dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="发表"
        android:textColor="@color/nsdk_cl_link_a"
        android:textSize="@dimen/nsdk_ugc_report_edit_text_size"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:id="@+id/ugc_post_comment_input_tv_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navi_dimens_41dp"
        android:background="@drawable/nsdk_ugc_detail_edittext_bg"
        android:layout_marginLeft="@dimen/navi_dimens_15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ugc_sub_photo_show_layout"
        android:layout_toLeftOf="@id/ugc_post_comment_submit_tv">

        <ImageView
            android:id="@+id/ugc_post_comment_delete_tv"
            android:layout_width="@dimen/navi_dimens_24dp"
            android:layout_height="@dimen/navi_dimens_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/navi_dimens_10dp"
            android:background="@drawable/nsdk_ugc_sub_info_fill_sounds_deleted_icon"
            android:scaleType="fitXY"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/ugc_post_comment_input_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_41dp"
            android:layout_toLeftOf="@id/ugc_post_comment_delete_tv"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/navi_dimens_15dp"
            android:paddingRight="@dimen/navi_dimens_15dp"
            android:text="@string/nsdk_string_ugc_detail_post_comment_prompt"
            android:textColor="@color/nsdk_ugc_txt_normal"
            android:textSize="@dimen/nsdk_ugc_report_edit_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ugc_post_comment_input_et_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navi_dimens_41dp"
        android:background="@drawable/nsdk_ugc_detail_edittext_bg"
        android:layout_toRightOf="@id/ugc_sub_photo_show_layout"
        android:layout_toLeftOf="@id/ugc_post_comment_submit_tv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navi_dimens_15dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/ugc_post_comment_delete_et"
            android:layout_width="@dimen/navi_dimens_24dp"
            android:layout_height="@dimen/navi_dimens_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/navi_dimens_10dp"
            android:background="@drawable/nsdk_ugc_sub_info_fill_sounds_deleted_icon"
            android:scaleType="fitXY"
            android:visibility="gone"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/ugc_post_comment_input_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_41dp"
            android:layout_toLeftOf="@id/ugc_post_comment_delete_et"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/nsdk_string_ugc_detail_post_comment_prompt"
            android:imeOptions="flagNoExtractUi"
            android:paddingLeft="@dimen/navi_dimens_15dp"
            android:paddingRight="@dimen/navi_dimens_15dp"
            android:textColor="@color/nsdk_ugc_txt_unfocused"
            android:textColorHint="@color/nsdk_ugc_txt_normal"
            android:textSize="@dimen/nsdk_ugc_report_edit_text_size" />
    </RelativeLayout>

</RelativeLayout>