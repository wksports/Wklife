<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:minHeight="240.5dp"
        android:id="@+id/animationView"
        android:orientation="vertical"
        android:background="@drawable/bnav_bg_traffic_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="19dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/title"
                android:textSize="19sp"
                android:fontFamily="HwChinese-medium"
                android:textColor="#333333"
                android:layout_weight="1"
                android:text="进入城区需进行备案登记"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/dismiss_icon"
                android:src="@drawable/bnav_traffic_record_cancle"
                android:layout_width="11.8dp"
                android:layout_height="11.8dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/content"
            android:layout_marginLeft="19dp"
            android:textSize="13sp"
            android:textColor="#C69868"
            android:lineSpacingExtra="15dp"
            android:textStyle=""
            android:text="完成备案可获得进入特定区域权限"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="20dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.baidu.navisdk.ui.routeguide.subview.MaxHeightRecyclerView
                app:nsdk_maxHeight="198dp"
                android:visibility="gone"
                android:id="@+id/cityrecord_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/state_view"
                android:background="@color/nsdk_white_color"
                android:minHeight="115dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/state_icon"
                        android:src="@drawable/bnav_traffic_record_right"
                        android:layout_width="38.5dp"
                        android:layout_height="38.5dp"/>
                    <com.baidu.navisdk.ui.widget.RouteResultLoadingImageView
                        android:id="@+id/loadingIcon"
                        android:layout_width="38.5dp"
                        android:layout_height="38.5dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="7.5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#28303A"
                        android:text="loading..."
                        android:id="@+id/state_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:id="@+id/retry"
                        android:text="重试"
                        android:textColor="@color/nsdk_swap_holo_bule_bright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bnav_bg_traffic_record_bule"
            android:textColor="@color/nsdk_white_color"
            android:textSize="16dp"
            android:gravity="center"
            android:text="立即备案"
            android:fontFamily="HwChinese-medium"
            android:id="@+id/record"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="38dp"/>
    </LinearLayout>

</LinearLayout>
