		    android:background="@drawable/nsdk_drawable_common_bg_prj_card_selector"
		    android:text="@string/nsdk_string_rg_ar_button"
		    android:textColor="#4c535e"
		    android:textStyle="bold" 
		    android:visibility="visible"/>
	    -->
	    <TextView
		    android:id="@+id/bnav_rg_btn_hud"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentBottom="true"
	        android:layout_marginBottom="@dimen/navi_dimens_13dp"
	        android:layout_marginRight="@dimen/navi_dimens_16dp"
	        android:textSize="16sp"
		    android:text="@string/nsdk_string_rg_hud_mirror"
			android:textColor="#ffffff"
		    android:textStyle="bold"
		    android:visibility="visible" />
	    <TextView
            android:id="@+id/bnav_rg_btn_hud_mirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/navi_dimens_13dp"
            android:layout_marginRight="@dimen/navi_dimens_16dp"
            android:text="@string/nsdk_string_rg_hud_mirror"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" 
            android:visibility="gone"/>
