<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/bnav_nearby_search_item_iv"
            android:layout_width="@dimen/navi_dimens_28dp"
            android:layout_height="@dimen/navi_dimens_28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:src="@drawable/nsdk_drawable_rg_ic_pass_bank" />

    <TextView
            android:id="@+id/bnav_nearby_search_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bnav_nearby_search_item_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/navi_dimens_5dp"
            android:layout_marginBottom="19dp"
            android:textColor="#333333"
            android:textSize="@dimen/navi_dimens_12dp"
            tools:text="@string/nsdk_string_nearby_search_as_gas_station" />

</RelativeLayout>