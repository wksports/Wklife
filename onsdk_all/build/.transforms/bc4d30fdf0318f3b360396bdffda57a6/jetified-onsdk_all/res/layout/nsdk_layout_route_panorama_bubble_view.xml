<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/nsdk_rr_oval_big_bubble"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/navi_dimens_20dp"
    android:paddingRight="@dimen/navi_dimens_20dp"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/route_pano_desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:maxLength="10"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13dp"
        tools:text="盘山路盘山路盘山路盘山路" />

    <View
        android:id="@+id/route_pano_ve_line"
        android:layout_width="1px"
        android:layout_height="14dp"
        android:layout_marginLeft="12dp"
        android:background="#ddd" />


    <TextView
        android:id="@+id/route_pano_show_full_img_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="查看全景"
        android:textColor="#3385ff"
        android:textSize="13dp" />

</merge>