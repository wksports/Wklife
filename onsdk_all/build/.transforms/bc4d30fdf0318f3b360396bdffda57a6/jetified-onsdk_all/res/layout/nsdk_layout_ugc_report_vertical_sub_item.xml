<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_55dp" >

        <TextView
            android:id="@+id/ugc_sub_report_content_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/navi_dimens_16dp"
            android:gravity="center_vertical"
            android:text="道路不通"
            android:textColor="@color/nsdk_cl_text_b"
            android:textSize="16sp" />
    
        <ImageView
            android:id="@+id/ugc_sub_report_select_icon"
            android:layout_width="@dimen/navi_dimens_24dp"
            android:layout_height="@dimen/navi_dimens_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/navi_dimens_16dp"
            android:src="@drawable/nsdk_rg_ic_ugc_select2_normal" />
        
       
    </RelativeLayout>

    
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_1dp"
        android:layout_marginLeft="@dimen/navi_dimens_16dp"
        android:layout_marginRight="@dimen/navi_dimens_16dp"
        android:background="@color/nsdk_cl_text_d" />
        

</LinearLayout>