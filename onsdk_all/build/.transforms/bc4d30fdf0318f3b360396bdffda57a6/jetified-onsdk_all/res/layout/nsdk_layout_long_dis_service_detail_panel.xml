<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/long_dis_service_panel_root_view"
    android:background="@drawable/nsdk_long_dis_service_panel_bg"
    android:elevation="8dp"
    android:paddingTop="12dp">


    <ImageView
        android:id="@+id/long_dis_service_panel_exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/nsdk_drawable_nearby_search_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/long_dis_service_panel_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#333"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/long_dis_service_panel_exit_btn"
        app:layout_constraintEnd_toStartOf="@id/long_dis_service_panel_exit_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/long_dis_service_panel_exit_btn"
        tools:text="石钟山服务区" />

    <TextView
        android:id="@+id/long_dis_service_panel_distance_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:maxLength="24"
        android:maxLines="1"
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/long_dis_service_panel_name_txt"
        app:layout_constraintTop_toBottomOf="@id/long_dis_service_panel_name_txt"
        tools:text="15000公里" />

    <View
        android:id="@+id/long_dis_service_panel_distance_time_line"
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#ddd"
        app:layout_constraintBottom_toBottomOf="@id/long_dis_service_panel_distance_txt"
        app:layout_constraintStart_toEndOf="@id/long_dis_service_panel_distance_txt"
        app:layout_constraintTop_toTopOf="@id/long_dis_service_panel_distance_txt" />

    <TextView
        android:id="@+id/long_dis_service_panel_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/long_dis_service_panel_distance_time_line"
        app:layout_constraintTop_toTopOf="@id/long_dis_service_panel_distance_txt"
        tools:text="3小时6分钟" />


    <LinearLayout
        android:id="@+id/long_dis_service_panel_support_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/nsdk_long_dis_service_support_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="5dp"
        android:paddingRight="4dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/long_dis_service_panel_name_txt"
        app:layout_constraintTop_toBottomOf="@id/long_dis_service_panel_distance_txt">

        <ImageView
            android:id="@+id/service_parking_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_parking" />

        <ImageView
            android:id="@+id/service_petrol_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_petrol" />

        <ImageView
            android:id="@+id/service_gas_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_gas" />

        <ImageView
            android:id="@+id/service_charge_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_charge" />

        <ImageView
            android:id="@+id/service_restaurant_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_restaurant"/>

        <ImageView
            android:id="@+id/service_toilet_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_toilet" />

        <ImageView
            android:id="@+id/service_repair_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_repair" />


        <ImageView
            android:id="@+id/service_supermarket_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_supermarket" />

        <ImageView
            android:id="@+id/service_entertainment_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bnav_long_dis_service_ic_entertainment" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/long_dis_service_panel_oil_layout"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/nsdk_long_dis_service_support_oil_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@id/long_dis_service_panel_support_item_layout"
        app:layout_constraintTop_toBottomOf="@id/long_dis_service_panel_distance_txt"
        app:layout_goneMarginLeft="0dp"
        app:layout_goneMarginStart="0dp">

        <ImageView
            android:id="@+id/long_dis_service_panel_brand_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            tools:src="@drawable/bnav_long_dis_service_ic_sinopec" />

        <TextView
            android:id="@+id/long_dis_service_panel_92"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="92号"
            android:textColor="#333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/long_dis_service_panel_95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="95号"
            android:textColor="#333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/long_dis_service_panel_98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="98号"
            android:textColor="#333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/long_dis_service_panel_diesel_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="柴油"
            android:textColor="#333"
            android:textSize="12sp" />
    </LinearLayout>


    <View
        android:id="@+id/long_dis_service_panel_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="47dp"
        android:background="#ddd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/long_dis_service_panel_distance_txt" />

    <TextView
        android:id="@+id/long_dis_service_panel_via_btn"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nsdk_light_navi_to_nav_bg_selector"
        android:gravity="center"
        android:text="添加途经点"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/long_dis_service_panel_name_txt"
        app:layout_constraintTop_toBottomOf="@id/long_dis_service_panel_line" />


</androidx.constraintlayout.widget.ConstraintLayout>