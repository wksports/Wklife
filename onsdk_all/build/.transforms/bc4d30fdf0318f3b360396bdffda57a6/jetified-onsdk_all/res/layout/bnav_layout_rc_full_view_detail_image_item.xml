<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="@dimen/navi_dimens_92dp"
            android:layout_height="@dimen/navi_dimens_77dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">

        <RelativeLayout
                android:id="@+id/image_place_holder_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF3F4F6">

            <ImageView
                    android:id="@+id/image_place_holder"
                    android:layout_width="@dimen/navi_dimens_30dp"
                    android:layout_height="@dimen/navi_dimens_40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bnav_drawable_route_fullview_page_placeholder"
                    android:scaleType="centerCrop" />
        </RelativeLayout>

        <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>