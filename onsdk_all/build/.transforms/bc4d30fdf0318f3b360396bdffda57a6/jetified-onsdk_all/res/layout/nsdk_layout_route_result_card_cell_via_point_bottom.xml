<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="37dp">

    <TextView
        android:id="@+id/left_button"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#333333"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/nsdk_drawable_rr_dynamic_card_button_down_arrow"
        tools:text="查看更多" />

    <LinearLayout
        android:id="@+id/right_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bnav_route_result_dynamic_card_via_point_bottom_right_bg"
        android:gravity="center"
        android:layout_width="110dp"
        android:layout_height="27dp">

        <TextView
            android:id="@+id/count_text"
            android:background="@drawable/nsdk_drawable_rr_dynamic_card_via_point_count_bg"
            android:layout_width="13dp"
            android:gravity="center"
            android:paddingBottom="2dp"
            tools:text="0"
            android:textSize="9dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="6dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/right_button_text"
            android:text="规划新路线"
            android:textSize="12dp"
            android:textColor="#3385FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</merge>