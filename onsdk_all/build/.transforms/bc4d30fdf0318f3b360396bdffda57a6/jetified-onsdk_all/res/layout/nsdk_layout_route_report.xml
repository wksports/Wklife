<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/selection_pointer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="#00000000">

            <RelativeLayout
                android:id="@+id/foot_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="visible">
                <FrameLayout
                    android:id="@+id/navi_result_ugc_report_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </FrameLayout>
                <com.baidu.navisdk.module.ugc.report.ui.widget.UgcCustomLinearScrollView
                    android:id="@+id/ugc_report_main_Slevel_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/ugc_sub_fade_layer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/navi_dimens_0dp"
                        tools:layout_height="@dimen/navi_dimens_90dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/navi_dimens_81dp"
                        android:background="@color/nsdk_cl_bg_d"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ugc_report_slevel_icon"
                            android:layout_width="@dimen/navi_dimens_41dp"
                            android:layout_height="@dimen/navi_dimens_41dp"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@id/ugc_report_slevel_icon"
                            android:layout_marginLeft="@dimen/navi_dimens_10dp">
                            <TextView
                                android:id="@+id/ugc_report_slevel_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:gravity="center_vertical"
                                android:textSize="18sp"
                                android:layout_marginBottom="@dimen/navi_dimens_9dp"
                                android:text=""/>

                            <TextView
                                android:id="@+id/slevel_select_point_prompt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="在图区确定问题位置"
                                android:gravity="center_vertical"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:visibility="visible"/>

                            <LinearLayout
                                android:id="@+id/slevel_addr_info_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                tools:visibility="visible"
                                android:visibility="gone">
                                <TextView
                                    android:id="@+id/slevel_addr_info"
                                    android:layout_width="@dimen/navi_dimens_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:text=""
                                    android:textColor="#666666"
                                    android:gravity="center_vertical"
                                    android:layout_marginRight="@dimen/navi_dimens_10dp"
                                    android:textSize="12sp"/>

                                <ImageView
                                    android:id="@+id/slevel_edit_addr_icon"
                                    android:layout_width="@dimen/navi_dimens_11dp"
                                    android:layout_height="@dimen/navi_dimens_11dp"
                                    android:src="@drawable/nsdk_slevel_change_position"/>

                                <TextView
                                    android:id="@+id/slevel_edit_addr_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="更改位置"
                                    android:textColor="#3385ff"
                                    android:layout_marginLeft="@dimen/navi_dimens_3dp"
                                    android:layout_marginRight="@dimen/navi_dimens_15dp"
                                    android:gravity="center_vertical"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/slevel_road_pay_tip_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                tools:visibility="visible"
                                android:visibility="gone">
                            </TextView>
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#e7e7e7"/>

                    <LinearLayout
                        android:id="@+id/ugc_sub_scroll_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/nsdk_cl_bg_d"
                        android:orientation="vertical"
                        tools:visibility="visible"
                        android:visibility="gone">
                        <LinearLayout
                            android:id="@+id/route_report_slevel_gridview_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/navi_dimens_10dp"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp"
                            tools:visibility="visible"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="问题详情"/>
                            <GridView
                                android:id="@+id/route_report_slevel_gridview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/navi_dimens_10dp"
                                android:layout_marginRight="@dimen/navi_dimens_15dp"
                                android:gravity="center"
                                android:listSelector="@android:color/transparent"
                                android:numColumns="4"
                                android:scrollbarFadeDuration="0"
                                android:scrollbars="none"
                                android:stretchMode="columnWidth"
                                android:verticalSpacing="@dimen/navi_dimens_13dp"
                                android:horizontalSpacing="@dimen/navi_dimens_13dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/route_report_road_name_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:layout_height="@dimen/navi_dimens_60dp"
                            android:layout_marginTop="@dimen/navi_dimens_10dp"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp"
                            android:layout_marginRight="@dimen/navi_dimens_15dp"
                            android:orientation="vertical"
                            tools:visibility="visible"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#ff0000"
                                    android:text="*"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:text="道路名称"/>
                            </LinearLayout>
                            <EditText
                                android:id="@+id/ugc_report_sub_road_name_etext"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/navi_dimens_38dp"
                                android:layout_marginTop="@dimen/navi_dimens_10dp"
                                android:paddingLeft="@dimen/navi_dimens_15dp"
                                android:paddingRight="@dimen/navi_dimens_15dp"
                                android:hint="请输入道路名称"
                                android:background="@drawable/nsdk_drawable_rg_view_unselected"
                                android:text=""
                                android:textColor="#333333"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/ugc_report_main_map_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/navi_dimens_13dp"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp">
                            <TextView
                                android:id="@+id/ugc_report_description_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="详情描述"/>

                            <ImageView
                                android:id="@+id/ugc_sub_info_fill_photo_iv"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ugc_report_description_detail"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="true"
                                android:scaleType="center"
                                android:src="@drawable/nsdk_ugc_sub_info_fill_photo_icon"
                                android:background="@drawable/nsdk_route_report_photo_bg"/>

                            <RelativeLayout
                                android:id="@+id/ugc_sub_photo_show_layout"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ugc_report_description_detail"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="true"
                                android:visibility="gone"
                                tools:visibility="visible">
                                <ImageView
                                    android:id="@+id/ugc_sub_photo_show_iv"
                                    android:layout_width="38dp"
                                    android:layout_height="38dp"
                                    android:scaleType="fitXY"/>
                                <!--<ImageView
                                    android:id="@+id/ugc_sub_photo_show_delete_iv"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:paddingLeft="6dp"
                                    android:paddingBottom="6dp"
                                    android:scaleType="fitXY"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/nsdk_route_report_pic_deleted_icon"/>-->
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/ugc_report_sub_descri_etext_container"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="48dp"
                                android:layout_marginRight="15dp"
                                android:layout_below="@id/ugc_report_description_detail"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/nsdk_drawable_rg_view_unselected">

                                <EditText
                                    android:id="@+id/ugc_report_sub_descri_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/navi_dimens_38dp"
                                    android:layout_toLeftOf="@+id/ugc_report_sounds_imageview"
                                    android:paddingLeft="@dimen/navi_dimens_15dp"
                                    android:paddingRight="@dimen/navi_dimens_15dp"
                                    android:hint="以上选项说不清，可在这里吐槽..."
                                    android:background="@null"
                                    android:text=""
                                    android:textColor="#333333"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/ugc_report_sounds_timesum_tview"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/navi_dimens_38dp"
                                    android:layout_toLeftOf="@id/ugc_report_sounds_imageview"
                                    android:paddingLeft="@dimen/navi_dimens_15dp"
                                    android:paddingRight="@dimen/navi_dimens_15dp"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:textColor="#333"
                                    android:textSize="14sp"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@id/ugc_report_sounds_imageview"
                                    android:layout_width="@dimen/navi_dimens_24dp"
                                    android:layout_height="@dimen/navi_dimens_24dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/navi_dimens_8dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/nsdk_route_report_sounds_icon"/>
                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ugc_report_sub_road_pay_edit_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/navi_dimens_10dp"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp"
                            android:layout_marginRight="@dimen/navi_dimens_15dp"
                            android:orientation="vertical"
                            tools:visibility="visible"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#ff0000"
                                    android:text="*"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:text="实际收费金额"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/navi_dimens_38dp"
                                android:layout_marginTop="@dimen/navi_dimens_10dp">
                                <EditText
                                    android:id="@+id/ugc_report_sub_road_pay_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/navi_dimens_38dp"
                                    android:paddingLeft="@dimen/navi_dimens_15dp"
                                    android:paddingRight="@dimen/navi_dimens_15dp"
                                    android:hint="请输入实际收费金额"
                                    android:text=""
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:inputType="numberDecimal"
                                    android:background="@drawable/nsdk_drawable_rg_view_unselected"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:paddingRight="@dimen/navi_dimens_15dp"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:text="元"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/navi_dimens_10dp">
                                <ImageView
                                    android:id="@+id/ugc_sub_info_road_pay_fill_photo_iv"
                                    android:layout_width="@dimen/navi_dimens_38dp"
                                    android:layout_height="@dimen/navi_dimens_38dp"
                                    android:scaleType="center"
                                    android:src="@drawable/nsdk_ugc_sub_info_fill_photo_icon"
                                    android:background="@drawable/nsdk_route_report_photo_bg"/>
                                <RelativeLayout
                                    android:id="@+id/ugc_sub_photo_road_pay_show_layout"
                                    android:layout_width="@dimen/navi_dimens_38dp"
                                    android:layout_height="@dimen/navi_dimens_38dp"
                                    tools:visibility="visible"
                                    android:visibility="gone">
                                    <ImageView
                                        android:id="@+id/ugc_sub_photo_road_pay_show_iv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"/>
                                    <!--<ImageView
                                        android:id="@+id/ugc_sub_photo_road_pay_show_delete_iv"
                                        android:layout_width="@dimen/navi_dimens_20dp"
                                        android:layout_height="@dimen/navi_dimens_20dp"
                                        android:paddingLeft="@dimen/navi_dimens_6dp"
                                        android:paddingBottom="@dimen/navi_dimens_6dp"
                                        android:scaleType="fitXY"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/nsdk_route_report_pic_deleted_icon"/>-->
                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="@dimen/navi_dimens_50dp"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:textColor="#ff0000"
                                        android:text="*"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:textColor="#333333"
                                        android:text="上传单张收费发票照片"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/ugc_report_reported_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/navi_dimens_33dp"
                            android:background="@drawable/nsdk_route_report_submit_button_selector"
                            android:text="立即上报"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:layout_marginTop="@dimen/navi_dimens_13dp"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp"
                            android:layout_marginRight="@dimen/navi_dimens_15dp"
                            android:layout_marginBottom="@dimen/navi_dimens_15dp"
                            android:enabled="false"/>
                    </LinearLayout>
                </com.baidu.navisdk.module.ugc.report.ui.widget.UgcCustomLinearScrollView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shade_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_above="@id/foot_container"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:id="@+id/transparent_shade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:background="@android:color/transparent"/>

                <View
                    android:id="@+id/grey_shade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#aa000000"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>

        <com.baidu.navisdk.ui.widget.EmptyTopLayout
            android:id="@+id/route_report_empty_layout"
            android:background="@color/nsdk_rg_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_64dp"
            android:gravity="center_vertical"
            android:layout_below="@id/route_report_empty_layout"
            android:tag="portrait">

            <!-- 退出按钮 -->
            <ImageView
                android:id="@+id/back_container"
                android:layout_width="@dimen/navi_dimens_54dp"
                android:layout_height="@dimen/navi_dimens_54dp"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/navi_dimens_10dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/bnav_titlebar_back_bg_selector"/>

            <LinearLayout
                android:id="@+id/route_report_yellow_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_38dp"
                android:layout_marginRight="@dimen/navi_dimens_9dp"
                android:layout_marginLeft="@dimen/navi_dimens_9dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/back_container"
                android:background="@drawable/nsdk_route_report_yellow_bar_bg"
                tools:visibility="visible"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#703a04"
                    android:layout_marginLeft="@dimen/navi_dimens_15dp"
                    android:text="图中"/>
                <ImageView
                    android:layout_width="@dimen/navi_dimens_13dp"
                    android:layout_height="@dimen/navi_dimens_20dp"
                    android:layout_marginLeft="@dimen/navi_dimens_6dp"
                    android:layout_marginRight="@dimen/navi_dimens_6dp"
                    android:src="@drawable/nsdk_route_report_yaw_prompt_icon"/>
                <TextView
                    android:layout_width="@dimen/navi_dimens_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#703a04"
                    android:text="表示您在这里偏离规划路线"/>

                <ImageView
                    android:id="@+id/route_report_close_yellow_bar"
                    android:layout_width="@dimen/navi_dimens_12dp"
                    android:layout_height="@dimen/navi_dimens_38dp"
                    android:layout_marginRight="@dimen/navi_dimens_12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/nsdk_route_report_yellow_bar_close_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>