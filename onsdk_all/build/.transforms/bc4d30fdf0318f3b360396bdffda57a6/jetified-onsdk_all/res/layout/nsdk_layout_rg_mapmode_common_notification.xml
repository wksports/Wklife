<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/nsdk_rg_transparent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <RelativeLayout
        android:id="@+id/bnav_rg_common_notification_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_65dp"
        android:layout_margin="@dimen/nsdk_rg_toolbox_margin_left"
        android:background="@drawable/nsdk_nav_notification_background"
        android:elevation="@dimen/nsdk_rg_toolbox_margin_left">

        <ImageView
                android:id="@+id/bnav_rg_common_notification_icon"
                android:layout_width="@dimen/navi_dimens_40dp"
                android:layout_height="@dimen/navi_dimens_40dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/navi_dimens_11dp"
                android:visibility="gone"
                tools:visibility="visible"/>

        <RelativeLayout
                android:id="@+id/bnav_rg_common_notification_all_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bnav_rg_common_notification_icon"
                android:layout_marginLeft="@dimen/navi_dimens_9dp"
                android:layout_marginRight="@dimen/navi_dimens_12dp"
                android:layout_toLeftOf="@+id/bnav_rg_common_notification_close_layout"
                android:layout_centerVertical="true">

            <LinearLayout
                    android:id="@+id/bnav_rg_common_notification_title_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/bnav_rg_common_notification_maintitle_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/nsdk_rg_common_notification_low_priority_main_text"
                        android:textSize="@dimen/navi_dimens_18dp"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                <LinearLayout
                        android:id="@+id/bnav_rg_common_notification_sub_third_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/bnav_rg_common_notification_subtitle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/navi_dimens_5dp"
                            android:textColor="@color/nsdk_rg_common_notification_low_priority_sub_text"
                            android:textSize="@dimen/navi_dimens_14dp"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                    <TextView
                            android:id="@+id/bnav_rg_common_notification_tips_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/navi_dimens_5dp"
                            android:layout_marginLeft="@dimen/navi_dimens_5dp"
                            android:textColor="@color/nsdk_rg_common_notification_low_priority_third_text"
                            android:textSize="@dimen/navi_dimens_12dp"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:visibility="gone"
                           tools:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/bnav_rg_common_notification_close_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true">
            <View
                    android:id="@+id/bnav_rg_common_notification_close_line"
                    android:layout_width="1px"
                    android:layout_height="@dimen/navi_dimens_34dp"
                    android:visibility="visible"/>

            <ImageView
                    android:id="@+id/bnav_rg_common_notification_close_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navi_dimens_12dp"
                    android:layout_marginRight="@dimen/navi_dimens_12dp"
                    android:src="@drawable/nsdk_drawable_toolbox_icon_quit_nav"
                    android:scaleType="centerInside"
                    android:textSize="@dimen/navi_dimens_14dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>