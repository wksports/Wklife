<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bnav_rg_pp_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="@dimen/navi_dimens_280dp"
        android:layout_height="wrap_content"
        android:layout_x="@dimen/navi_dimens_10dp"
        android:layout_y="@dimen/navi_dimens_200dp">

        <RelativeLayout
            android:id="@+id/bnav_rg_pp_panel"
            android:layout_width="@dimen/navi_dimens_280dp"
            android:layout_height="wrap_content"
            android:layout_x="@dimen/navi_dimens_10dp"
            android:layout_y="@dimen/navi_dimens_200dp"
            android:background="@drawable/nsdk_drawable_rg_pickpoint_bg">

            <LinearLayout
                android:id="@+id/bnav_rg_pp_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:minHeight="@dimen/navi_dimens_66dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bnav_rg_pp_name"
                    android:layout_width="@dimen/navi_dimens_200dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/navi_dimens_10dp"
                    android:paddingRight="@dimen/navi_dimens_10dp"
                    android:text="深圳市科技园工业园生产力大厦"
                    android:textColor="#313233"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bnav_rg_pp_addr"
                    android:layout_width="@dimen/navi_dimens_200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/navi_dimens_6dp"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/navi_dimens_10dp"
                    android:paddingRight="@dimen/navi_dimens_10dp"
                    android:singleLine="true"
                    android:text="在广东省深圳市科技园高新中三道国人通信大厦停车场"
                    android:textColor="#7a7c80"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/bnav_rg_pp_set_to_via"
                android:layout_width="@dimen/navi_dimens_80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/nsdk_drawable_rg_pickpoint_btn_right"
                android:gravity="center"
                android:minHeight="@dimen/navi_dimens_66dp"
                android:text="@string/nsdk_string_rg_pp_set_to_via"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/bnav_rg_pp_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bnav_rg_pp_panel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/navi_dimens_2dp"
            android:src="@drawable/bnav_pick_in_map_centerpoint" />
    </RelativeLayout>
</AbsoluteLayout>