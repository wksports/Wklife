<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/navi_dimens_15dp" >

    <ImageView
        android:id="@+id/dest_item_label"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/navi_dimens_15dp"
        android:layout_height="@dimen/navi_dimens_15dp"
        android:gravity="center"
        android:src="@drawable/nsdk_drawable_rg_label_1"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/dest_item_name"
        android:layout_toRightOf="@+id/dest_item_label"
        android:layout_toLeftOf="@+id/dest_item_distance"
        android:layout_marginLeft="@dimen/navi_dimens_8dp"
        android:layout_marginRight="@dimen/navi_dimens_4dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海底捞（上地店）"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dest_item_distance"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.3km"
        android:textColor="#999999"
        android:textSize="12sp"/>
</RelativeLayout>