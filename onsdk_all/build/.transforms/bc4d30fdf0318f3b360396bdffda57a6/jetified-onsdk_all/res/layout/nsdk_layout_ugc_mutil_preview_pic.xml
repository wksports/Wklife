<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18181c"
    android:orientation="vertical">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ugc_preview_pic_view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/navi_dimens_33dp"/>

    <ImageView
        android:id="@+id/back_preview_pic"
        android:layout_width="@dimen/navi_dimens_45dp"
        android:layout_height="@dimen/navi_dimens_45dp"
        android:gravity="center"
        android:padding="@dimen/navi_dimens_12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bnav_ugc_preview_back_white" />


    <!-- 退出按钮 -->
    <ImageView
        android:id="@+id/delete_preview_pic"
        android:layout_width="@dimen/navi_dimens_45dp"
        android:layout_height="@dimen/navi_dimens_45dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:padding="@dimen/navi_dimens_12dp"
        android:src="@drawable/bnav_ugc_preview_delete_icon" />

    <com.baidu.navisdk.module.ugc.pictures.previews.ViewPageIndicatorLayout
        android:id="@+id/ugc_preview_pic_indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/navi_dimens_16dp"/>
</FrameLayout>