<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/citymap_tab_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#ffffff"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/localmap_new_tab_linearlayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/local_map_textview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="国内"
            android:singleLine="true"
            android:textColor="#3385ff"
            android:textSize="15dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/maptab_divide"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#e6e6e6"/>

        <TextView
            android:id="@+id/abroad_map_textview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="国际"
            android:textColor="#333333"
            android:singleLine="true"
            android:textSize="15dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/poisearch_blue_linearlayout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/internal_blue_imageview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/nsdk_download_tab_selected"/>

        <ImageView
            android:id="@+id/abroad_blue_imageview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/nsdk_download_tab_unselected"/>
    </LinearLayout>
</RelativeLayout>