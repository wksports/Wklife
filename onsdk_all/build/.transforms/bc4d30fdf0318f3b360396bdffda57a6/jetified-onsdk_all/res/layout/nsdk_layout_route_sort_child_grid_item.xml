<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/navi_dimens_116dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/nsdk_common_bt_pressed_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nsdk_route_sort_default_tips_layout"
        android:layout_width="@dimen/navi_dimens_27dp"
        android:layout_height="@dimen/navi_dimens_15dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/navi_dimens_13dp"
        android:layout_marginTop="@dimen/navi_dimens_11dp"
        android:background="@drawable/nsdk_drawable_route_sort_default_tips_bg"
        android:text="@string/nsdk_string_route_sort_default_tips"
        android:textColor="@color/nsdk_route_sort_setting_default"
        android:textSize="@dimen/navi_dimens_10dp"/>

    <RelativeLayout
        android:id="@+id/nsdk_route_sort_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/navi_dimens_5dp">

        <TextView
            android:id="@+id/nsdk_route_sort_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/navi_dimens_10dp"
            android:drawableTop="@drawable/nsdk_drawable_route_sort_default_selected"
            android:gravity="center"
            android:lines="1"
            android:text="@string/nsdk_string_route_sort_item_default"
            android:textColor="@color/nsdk_route_sort_item_text"
            android:textSize="@dimen/navi_dimens_13dp"/>

        <View
            android:id="@+id/nsdk_route_sort_item_divider_vertical"
            style="@style/NavRGTRouteSortItemDivider"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/nsdk_route_sort_item_tv"
            android:layout_alignBottom="@+id/nsdk_route_sort_item_tv"/>

    </RelativeLayout>

    <View
        android:id="@+id/nsdk_route_sort_item_divider_bottom"
        style="@style/NavRGTRouteSortItemDivider"
        android:layout_marginTop="@dimen/navi_dimens_31dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>