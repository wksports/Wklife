<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_button_icon"
        android:layout_width="@dimen/navi_dimens_58dp"
        android:layout_height="@dimen/navi_dimens_58dp"
        android:layout_marginBottom="@dimen/navi_dimens_1dp"
        tools:src="@drawable/nsdk_type_default_road_police" />

    <TextView
        android:id="@+id/tv_button_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/navi_dimens_12dp"
        tools:text="警察" />

</LinearLayout>