<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/navi_dimens_400dp"
    android:layout_height="@dimen/navi_dimens_400dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_100dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="你有上报的道路问题是否现在补充"
        android:textSize="@dimen/navi_dimens_20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/confirm_button_left"
            android:layout_width="@dimen/navi_dimens_0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/navi_dimens_100dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="你有上报的道路问题是否现在补充"
            android:textSize="@dimen/navi_dimens_20dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent" 
            android:layout_marginTop="@dimen/navi_dimens_2dp"
            android:layout_marginBottom="@dimen/navi_dimens_2dp"
            />

        <TextView
            android:id="@+id/confirm_button_right"
            android:layout_width="@dimen/navi_dimens_0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/navi_dimens_100dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="你有上报的道路问题是否现在补充"
            android:textSize="@dimen/navi_dimens_20dp" />
    </LinearLayout>

</LinearLayout>