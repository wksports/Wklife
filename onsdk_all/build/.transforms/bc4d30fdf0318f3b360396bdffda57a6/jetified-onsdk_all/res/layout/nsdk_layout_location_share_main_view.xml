<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/location_share_group_creation_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"></FrameLayout>
    <FrameLayout
            android:id="@+id/location_share_usage_rule_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"></FrameLayout>

    <FrameLayout
            android:id="@+id/location_share_group_member_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"></FrameLayout>

    <FrameLayout
            android:id="@+id/location_share_group_setting_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"></FrameLayout>

    <FrameLayout
            android:id="@+id/location_share_group_share_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:visibility="gone"
            tools:visibility="visible">

        <TextView
                android:id="@+id/location_share_group_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/navi_dimens_310dp"
                android:text="口令 809158 已复制, 请选择位置邀请"
                android:textColor="#ffffff"
                android:textSize="@dimen/navi_dimens_15dp"/>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/location_share_group_classified_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></FrameLayout>
</FrameLayout>

