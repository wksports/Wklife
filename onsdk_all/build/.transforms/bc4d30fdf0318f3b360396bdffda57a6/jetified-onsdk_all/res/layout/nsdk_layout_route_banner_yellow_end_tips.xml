<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bnav_route_banner_yellow_white_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <TextView
            android:id="@+id/end_point_yellow_tips"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="#333333"/>

        <RelativeLayout
            android:id="@+id/end_point_yellow_tips_close_layout"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/end_point_yellow_tips_close_iv"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bnav_route_banner_yellow_tips_close"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/end_point_yellow_tips_close_layout"
            android:layout_toRightOf="@id/end_point_yellow_tips"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp">

            <TextView
                android:id="@+id/end_point_name1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/end_point_name2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/end_point_name3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="12dp"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>