<?xml version="1.0" encoding="utf-8"?>
<com.baidu.navisdk.module.lightnav.view.LightNaviSingleTabBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/route_car_tabs_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nsdk_light_navi_bottom_single_tab_height"
    android:clickable="false"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/time"
            android:textSize="@dimen/navi_dimens_18dp"
            android:layout_marginLeft="@dimen/navi_dimens_15dp"
            android:singleLine="true"
            tools:text="time"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/distance"
            android:textSize="@dimen/navi_dimens_18dp"
            android:singleLine="true"
            tools:text="distance"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/navi_dimens_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/traffic_light"
            android:textSize="@dimen/navi_dimens_18dp"
            android:layout_marginLeft="@dimen/navi_dimens_8dp"
            android:singleLine="true"
            tools:text="distance"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/nsdk_light_navi_traffic_light_single"
            android:includeFontPadding="false"
            android:drawablePadding="@dimen/navi_dimens_5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/detail_seperate_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#d7d8d9"
        android:visibility="visible" />
</com.baidu.navisdk.module.lightnav.view.LightNaviSingleTabBar>