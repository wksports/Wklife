<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="@dimen/navi_dimens_15dp"
                android:layout_marginRight="@dimen/navi_dimens_15dp"
                android:layout_height="@dimen/navi_dimens_59dp">

    <ImageView
        android:id="@+id/nsdk_driving_habit_item_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/nsdk_drawable_driving_habit_item_point"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/nsdk_driving_habit_item_tv"
        tools:text="走小路避堵"
        android:textColor="@color/nsdk_route_sort_title"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/nsdk_driving_habit_item_point"
        android:textSize="@dimen/navi_dimens_14dp"
        android:layout_marginLeft="@dimen/navi_dimens_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nsdk_driving_habit_item_summary_tv"
        tools:text="(走小路避堵)"
        android:textColor="@color/nsdk_route_sort_summary_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/nsdk_driving_habit_item_tv"
        android:textSize="@dimen/navi_dimens_14dp"
        android:layout_marginLeft="@dimen/navi_dimens_4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/nsdk_driving_habit_item_select"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/nsdk_drawable_driving_habit_selected"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/nsdk_driving_habit_item_underline"
        style="@style/NavRGTRouteSortItemDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7"
        android:layout_height="1px"/>

</RelativeLayout>