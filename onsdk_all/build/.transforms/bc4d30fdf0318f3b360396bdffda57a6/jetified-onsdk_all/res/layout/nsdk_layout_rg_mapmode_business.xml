<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nsdk_layout_rg_business_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/nsdk_layout_rg_busi_logo_area"
        android:layout_width="@dimen/navi_dimens_156dp"
        android:layout_height="@dimen/navi_dimens_105dp"
        android:layout_below="@id/nsdk_empty_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nsdk_rg_other_gift_popup_big"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nsdk_layout_rg_busi_logo_image"
            android:layout_width="@dimen/navi_dimens_152dp"
            android:layout_height="@dimen/navi_dimens_60dp"
            android:scaleType="fitXY"
            android:src="@drawable/bnav_pick_in_map_centerpoint"

            />

        <TextView
            android:id="@+id/nsdk_layout_rg_busi_logo_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="点击送礼"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/nsdk_layout_rg_busi_banner_area"
        android:layout_width="@dimen/navi_dimens_204dp"
        android:layout_height="@dimen/navi_dimens_160dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nsdk_rg_other_gift_popup_big"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/navi_dimens_8dp"
        android:paddingRight="@dimen/navi_dimens_8dp"
        android:paddingTop="@dimen/navi_dimens_8dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/nsdk_layout_rg_busi_banner_image"
            android:layout_width="@dimen/navi_dimens_184dp"
            android:layout_height="@dimen/navi_dimens_80dp"
            android:scaleType="fitXY"
            android:src="@drawable/bnav_bear_wait_end" />

        <TextView
            android:id="@+id/nsdk_layout_rg_busi_banner_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_8dp"
            android:gravity="center"
            android:text="堵车不读心，您获得可口可乐1瓶"
            android:textColor="#ff0000"
            android:textSize="@dimen/navi_dimens_13dp" />

        <TextView
            android:id="@+id/nsdk_layout_rg_busi_banner_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_4dp"
            android:gravity="center"
            android:text="导航结束后领取"
            android:textColor="@color/nsdk_cl_text_c"
            android:textSize="@dimen/navi_dimens_10dp" />

    </LinearLayout>

</RelativeLayout>