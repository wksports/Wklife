<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_route_recommend_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nsdk_rg_faster_route_intervene_height"
    android:orientation="vertical">

    <View
        android:id="@+id/bnav_rg_common_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_1dp"
        android:background="@color/nsdk_cl_bg_b" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_16dp"
        android:layout_marginTop="@dimen/navi_dimens_12dp">

        <TextView
            android:id="@+id/route_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nsdk_string_rg_faster_route_title"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="@dimen/navi_dimens_16dp" />

        <TextView
            android:id="@+id/route_recommend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nsdk_string_rg_faster_route_time"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="@dimen/navi_dimens_16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/route_recommend_roud_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_16dp"
        android:layout_marginTop="@dimen/navi_dimens_8dp"
        android:text="@string/nsdk_string_rg_faster_route_road_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/nsdk_cl_text_a"
        android:textSize="@dimen/navi_dimens_14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nsdk_rg_intervene_control_height"
        android:layout_marginLeft="@dimen/navi_dimens_16dp"
        android:layout_marginRight="@dimen/navi_dimens_16dp"
        android:layout_marginBottom="@dimen/navi_dimens_12dp"
        android:layout_marginTop="@dimen/navi_dimens_8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/route_recommend_switch_now"
            android:layout_width="@dimen/navi_dimens_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bnav_common_button_selector"
            android:gravity="center"
            android:text="@string/nsdk_string_rg_faster_route_btn_ok"
            android:textColor="@color/nsdk_cl_text_e"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/route_recommend_switch_cannel"
            android:layout_width="@dimen/navi_dimens_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/navi_dimens_16dp"
            android:layout_weight="1"
            android:background="@drawable/bnav_lineframe_button_selector"
            android:gravity="center"
            android:text="@string/nsdk_string_rg_faster_route_btn_cancle"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>