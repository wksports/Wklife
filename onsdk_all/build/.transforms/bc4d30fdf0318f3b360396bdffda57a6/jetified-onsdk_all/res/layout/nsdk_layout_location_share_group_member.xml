<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/location_share_destination_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/navi_dimens_62dp"
            android:paddingTop="@dimen/navi_dimens_7dp"
            android:paddingBottom="@dimen/navi_dimens_7dp"
            android:layout_marginLeft="@dimen/navi_dimens_4dp"
            android:layout_marginRight="@dimen/navi_dimens_4dp"
            android:layout_below="@+id/bnav_top_empty_view"
            android:layout_marginTop="@dimen/navi_dimens_24dp"
            android:background="@drawable/nsdk_drawble_location_share_group_destination_bg"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/left_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/navi_dimens_2dp"
                android:layout_marginLeft="@dimen/navi_dimens_12dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/bnav_titlebar_ic_back_new"/>

        <TextView
                android:id="@+id/location_share_destination_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入队伍目的地"
                android:padding="@dimen/navi_dimens_5dp"
                android:textColorHint="#999999"/>

        <LinearLayout
                android:id="@+id/location_share_group_destination_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/navi_dimens_2dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="@dimen/navi_dimens_18dp"
                    android:layout_height="@dimen/navi_dimens_18dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/nsdk_drawable_location_share_group_destination_edit"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/navi_dimens_2dp"
                    android:text="编辑"
                    android:textColor="#3385ff"
                    android:textSize="@dimen/navi_dimens_10dp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/location_share_group_destination_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/navi_dimens_2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/navi_dimens_21dp"
                android:layout_marginRight="@dimen/navi_dimens_10dp"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="@dimen/navi_dimens_18dp"
                    android:layout_height="@dimen/navi_dimens_18dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/nsdk_drawable_location_share_group_destination_go"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/navi_dimens_2dp"
                    android:text="到这去"
                    android:textColor="#3385ff"
                    android:textSize="@dimen/navi_dimens_10dp"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
            android:id="@+id/location_share_my_location"
            android:layout_width="@dimen/navi_dimens_42dp"
            android:layout_height="@dimen/navi_dimens_42dp"
            android:layout_above="@+id/location_share_bottom_card_rl"
            android:layout_marginBottom="@dimen/navi_dimens_4dp"
            android:layout_marginLeft="@dimen/navi_dimens_5dp"
            android:background="@drawable/nsdk_drawable_rr_nomal_button_mask"
            android:contentDescription="我的位置"
            android:scaleType="center"
            android:src="@drawable/nsdk_rr_location_icon"/>

    <LinearLayout
            android:id="@+id/location_share_full_view_member"
            android:layout_width="@dimen/navi_dimens_42dp"
            android:layout_height="@dimen/navi_dimens_42dp"
            android:layout_above="@id/location_share_bottom_card_rl"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/navi_dimens_4dp"
            android:layout_marginRight="@dimen/navi_dimens_5dp"
            android:background="@drawable/nsdk_drawable_rr_nomal_button_mask"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/nsdk_drawable_location_share_whole_member"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:text="全览"
                android:textColor="#333333"
                android:textSize="@dimen/navi_dimens_10dp"/>

    </LinearLayout>

    <RelativeLayout
            android:id="@id/location_share_bottom_card_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_175dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/navi_dimens_1dp"
            android:layout_marginRight="@dimen/navi_dimens_1dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/nsdk_drawable_location_share_bottom_card_bg"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navi_dimens_16dp"
                android:layout_marginTop="@dimen/navi_dimens_10dp"
                android:orientation="vertical">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                        android:id="@+id/location_share_group_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的队伍"
                        android:textColor="#333333"
                        android:textSize="@dimen/navi_dimens_16dp"
                        android:singleLine="true"
                        android:maxLength="6"/>
                <TextView
                        android:id="@+id/location_share_group_member_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0人)"
                        android:textColor="#333333"
                        android:textSize="@dimen/navi_dimens_16dp"
                        android:singleLine="true"/>

            </LinearLayout>
            <TextView
                    android:id="@+id/location_share_group_member_expire_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/navi_dimens_2dp"
                    android:text="2018-12-25 06:35自动解散"
                    android:textColor="#999999"
                    android:textSize="@dimen/navi_dimens_13dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/location_share_go_to_group_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/navi_dimens_14dp"
                android:layout_marginTop="@dimen/navi_dimens_20dp"
                android:drawablePadding="@dimen/navi_dimens_2dp"
                android:drawableRight="@drawable/nsdk_drawable_location_share_right_arrow"
                android:text="队伍设置"
                android:textColor="#3385ff"
                android:textSize="@dimen/navi_dimens_13dp"/>

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/navi_dimens_59dp"
                android:background="#eaeaea"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_85dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/navi_dimens_5dp"
                android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/location_share_member_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:visibility="gone">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
