<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#fffefefe"
             android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/ugc_map_report_statusbar_view"
            layout="@layout/bnav_statusbar_empty_view_include"/>

        <FrameLayout
            android:id="@+id/ugc_map_main_title_common_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ugc_map_act_tip_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/nsdk_ugc_map_act_tip_bar_bg"
            android:visibility="gone"
            tools:visibility="visible">
            <ImageView
                android:id="@+id/ugc_map_act_tip_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/nsdk_ugc_map_act_tip_icon"/>
            <TextView
                android:id="@+id/ugc_map_act_tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/ugc_map_act_tip_icon"
                android:text="参加人人上报，赢惊喜大奖!"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12dp">
            </TextView>
            <ImageView
                android:id="@+id/ugc_map_act_tip_close"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/nsdk_ugc_map_act_tip_close"/>
        </LinearLayout>

        <com.baidu.navisdk.module.ugc.replenishdetails.UgcReplenishDetailsTipsLayout
            android:id="@+id/ugc_map_replenish_details_hit_layout"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ugc_map_main_firs_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_16dp"
            android:gravity="center"
            android:textSize="@dimen/navi_dimens_17dp"
            android:textColor="#333"
            android:text="即时路况"/>

        <GridView
            android:id="@+id/ugc_map_main_allitems_gv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/nsdk_ugc_report_grid_margin"
            android:layout_marginRight="@dimen/nsdk_ugc_report_grid_margin"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/navi_dimens_10dp"
            android:horizontalSpacing="@dimen/navi_dimens_50dp"
            android:columnWidth="@dimen/navi_dimens_68dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:scrollbarFadeDuration="0"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/navi_dimens_10dp"
            android:stretchMode="spacingWidth"
            tools:layout_height="200dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ugc_map_main_sec_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/navi_dimens_6dp"
            android:gravity="center"
            android:textSize="@dimen/navi_dimens_17dp"
            android:textColor="#333"
            android:text="常规问题"/>

        <TextView
            android:id="@+id/ugc_map_main_sec_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/navi_dimens_12dp"
            tools:visibility="visible"
            android:textColor="#8a93a5"
            android:text="上报地点、道路信息"/>

        <GridView
            android:id="@+id/ugc_map_main_report_allitems_gv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/nsdk_ugc_report_grid_margin"
            android:layout_marginTop="@dimen/navi_dimens_10dp"
            android:layout_marginRight="@dimen/nsdk_ugc_report_grid_margin"
            android:columnWidth="@dimen/navi_dimens_68dp"
            android:horizontalSpacing="@dimen/navi_dimens_50dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:scrollbarFadeDuration="0"
            android:scrollbars="none"
            android:stretchMode="spacingWidth"
            android:verticalSpacing="@dimen/navi_dimens_10dp"
            tools:layout_height="200dp" />


        <LinearLayout
            android:id="@+id/ugc_map_main_bottom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nsdk_ugc_report_grid_margin"
            android:layout_marginRight="@dimen/nsdk_ugc_report_grid_margin"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ugc_map_main_bottom_feedback"
                android:layout_width="0dp"
                android:layout_height="@dimen/navi_dimens_40dp"
                android:layout_weight="1"
                android:textSize="@dimen/navi_dimens_12dp"
                android:textColor="#666F81"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:gravity="center"
                android:text="反馈建议"
                android:background="@drawable/nsdk_ugc_map_navi_mayi_btn_normal"/>

            <TextView
                android:id="@+id/ugc_map_main_bottom_contribute"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/navi_dimens_40dp"
                android:textSize="@dimen/navi_dimens_12dp"
                android:textColor="#666F81"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/navi_dimens_15dp"
                android:background="@drawable/nsdk_ugc_map_navi_mayi_btn_normal"
                android:text="我的贡献页"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ugc_map_main_subitem_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        android:gravity="bottom">
        <ListView
            android:id="@+id/ugc_map_main_subitem_listview"
            android:background="#fff"
            android:footerDividersEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_below="@id/ugc_map_main_subitem_listview"
            android:id="@+id/ugc_map_main_subitem_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_10dp"
            android:background="#eaeaea"/>
        <TextView
            android:id="@+id/subitem_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_40dp"
            android:layout_below="@id/ugc_map_main_subitem_line"
            android:clickable="true"
            android:gravity="center"
            android:background="#fff"
            android:text="取消"
            android:textColor="@color/bnav_common_ugc_sub_item_txt_selector"
            android:textSize="@dimen/navi_dimens_16dp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ugc_map_replenish_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nsdk_ugc_menu_background"
        android:visibility="gone"/>
</FrameLayout>