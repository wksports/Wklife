<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_16dp"
        android:background="@color/nsdk_cl_bg_c" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_1dp"
        android:background="@color/nsdk_cl_text_d" />
    
    <RelativeLayout 
        android:id="@+id/ugc_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_56dp"
        android:background="#ffffff">
        
        <TextView 
            android:id="@+id/report_text"
            android:layout_marginLeft="@dimen/navi_dimens_16dp"
            android:layout_centerVertical="true"
              android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
            android:text="道路问题反馈"
            android:textSize="16sp"
            android:textColor="@color/nsdk_cl_text_a"
           
            />
        
        <ImageView
            android:id = "@+id/image_button"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/navi_dimens_24dp"
            android:layout_height="@dimen/navi_dimens_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/navi_dimens_16dp"
           
            />
        
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_1dp"
        android:background="@color/nsdk_cl_text_d" />

</LinearLayout>