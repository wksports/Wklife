<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.LinearLayout"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/truck_limit_temp_height_button"
        android:orientation="vertical"
        android:layout_width="@dimen/nsdk_truck_center_view_height_panel_width"
        android:layout_height="@dimen/nsdk_truck_center_view_height_panel_height"
        android:gravity="center"
        android:background="@drawable/nsdk_drawable_rr_top_button_click_mask">

        <TextView
            android:id="@+id/tv_height_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nsdk_truck_height_limit_icon"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#333333"
            android:textStyle="bold"
            tools:text="3.2"/>

        <TextView
            android:id="@+id/tv_height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="1dp"
            android:textColor="#333333"
            android:text="总高度"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/nsdk_route_result_split_line_color"/>

    <LinearLayout
        android:id="@+id/truck_limit_temp_weight_button"
        android:orientation="vertical"
        android:layout_width="@dimen/nsdk_truck_center_view_height_panel_width"
        android:layout_height="@dimen/nsdk_truck_center_view_height_panel_height"
        android:gravity="center"
        android:background="@drawable/nsdk_drawable_rr_bottom_button_click_mask">

        <TextView
            android:id="@+id/tv_weight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nsdk_truck_weight_limit_icon"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#333333"
            android:textStyle="bold"
            tools:text="3.2"/>

        <TextView
            android:id="@+id/tv_weight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="1dp"
            android:textColor="#333333"
            android:text="总重量"/>

    </LinearLayout>

</merge>