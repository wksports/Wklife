<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/navi_dimens_16dp"
    android:paddingBottom="@dimen/navi_dimens_14dp"
    android:gravity="center">

    <TextView
        android:id="@+id/bnav_rg_weather_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/navi_dimens_10dp"
        android:maxLines="1"
        android:textColor="#999"
        tools:text="天气信息更新时间 2018-12-26 12:44 由&#160;&#160;&#8201;" />

    <TextView
        android:id="@+id/bnav_rg_weather_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/navi_dimens_10dp"
        android:maxLines="1"
        android:textColor="#333"
        android:ellipsize="end"
        tools:text="心中有数" />

    <TextView
        android:id="@+id/bnav_rg_weather_end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/navi_dimens_10dp"
        android:maxLines="1"
        android:textColor="#999"
        android:ellipsize="end"
        android:text="&#160;&#160;&#8201;提供" />

</LinearLayout>