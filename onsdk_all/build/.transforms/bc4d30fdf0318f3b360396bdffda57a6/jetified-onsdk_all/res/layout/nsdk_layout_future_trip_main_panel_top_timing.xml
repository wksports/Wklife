<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_left"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navi_dimens_60dp"
    android:paddingLeft="@dimen/navi_dimens_10dp"
    android:background="@drawable/bnav_bg_future_trip_timing_panel_section"
    tools:showIn="@layout/nsdk_layout_future_trip_main_panel_top">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/desc_img"
                android:layout_width="@dimen/navi_dimens_12dp"
                android:layout_height="@dimen/navi_dimens_12dp"
                android:background="@drawable/nsdk_bg_future_trip_panel_top_red_timing_section" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/navi_dimens_7dp"
                android:textSize="@dimen/navi_dimens_12dp"
                tools:text="@string/nsdk_future_trip_depart_time" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/navi_dimens_5dp"
                android:textSize="@dimen/navi_dimens_12dp"
                tools:text="今天" />
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navi_dimens_18dp"
            android:layout_marginTop="@dimen/navi_dimens_0dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/navi_dimens_20dp"
            android:textStyle="bold"
            tools:text="20:00"
            tools:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/navi_dimens_9dp"
        android:layout_height="@dimen/navi_dimens_9dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/navi_dimens_9dp"
        android:src="@drawable/nsdk_bg_future_trip_top_timing_section_arrow" />
</RelativeLayout>


    