<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hw_subscript_distance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_number_size"
            android:textColor="@color/nsdk_rg_hw_subscript_list_head_number_color"
            android:textStyle="bold"
            android:text="-" />

        <TextView
            android:id="@+id/hw_subscript_distance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_text_size"
            android:textColor="@color/nsdk_rg_hw_subscript_list_head_text_color"
            android:text="全程剩余" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hw_subscript_service_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_number_size"
            android:textColor="@color/nsdk_rg_hw_subscript_list_head_number_color"
            android:textStyle="bold"
            android:text="-" />

        <TextView
            android:id="@+id/hw_subscript_service_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_text_size"
            android:textColor="@color/nsdk_rg_hw_subscript_list_head_text_color"
            android:text="前方服务区(个)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hw_subscript_toll_station_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_number_size"
            android:textColor="@color/nsdk_rg_hw_subscript_list_head_number_color"
            android:textStyle="bold"
            android:text="-" />

        <TextView
            android:id="@+id/hw_subscript_toll_station_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_text_size"
            android:textColor="@color/nsdk_rg_hw_subscript_list_head_text_color"
            android:text="前方收费站(个)" />

    </LinearLayout>
</LinearLayout>
