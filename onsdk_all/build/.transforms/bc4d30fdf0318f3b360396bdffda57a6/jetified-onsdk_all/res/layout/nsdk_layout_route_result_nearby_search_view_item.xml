<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/bnav_nearby_search_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:src="@drawable/nsdk_drawable_rg_route_search_gas_station" />

    <TextView
        android:id="@+id/bnav_nearby_search_item_tv"
        style="@style/Text_NaviMenuRouteSearchText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="19dp"
        android:text="@string/nsdk_string_nearby_search_as_gas_station" />

</LinearLayout>