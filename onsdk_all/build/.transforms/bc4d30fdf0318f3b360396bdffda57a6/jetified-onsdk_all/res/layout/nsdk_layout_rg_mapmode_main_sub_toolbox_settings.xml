<?xml version="1.0" encoding="utf-8"?>
<!--#########################注意#########################-->
<!--该布局为动态加载，未触发时会使用一个view进行占位，高度与该view一致。-->
<!--因此，如有修改导致该布局高度发生改变时，应同步到代码中（getRootViewHeight）！！！！！-->
<!--#########################################################-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bnav_rg_toolbox_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bnav_rg_toolbox_divider_h1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nsdk_rg_toolbox_divider_height"
        android:background="@color/nsdk_cl_rg_bg_c" />

    <GridView
        android:id="@+id/bnav_rg_toolbox_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_15dp"
        android:layout_marginRight="@dimen/navi_dimens_15dp"
        android:horizontalSpacing="1px"
        android:scrollbars="none"
        android:gravity="center"/>

    <TextView
        android:id="@+id/bnav_rg_menu_more_setting_tv"
        android:layout_width="@dimen/navi_dimens_188dp"
        android:layout_height="@dimen/nsdk_rg_toolbox_more_setting_btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/nsdk_rg_toolbox_more_setting_btn_margintop"
        android:layout_marginBottom="@dimen/nsdk_rg_toolbox_more_setting_btn_marginbottom"
        android:background="@drawable/nsdk_drawable_toolbox_more_setting_bg_selector"
        android:gravity="center"
        android:text="更多设置"
        android:textColor="@color/nsdk_toolbox_more_setting_txt_selector"
        android:textSize="@dimen/navi_dimens_16dp" />
</LinearLayout>