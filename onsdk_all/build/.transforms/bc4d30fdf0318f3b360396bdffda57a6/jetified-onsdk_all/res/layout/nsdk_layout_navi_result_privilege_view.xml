<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/navi_dimens_102dp"
              android:background="@drawable/nsdk_navi_result_privilege_card_bg"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <TextView
            android:id="@+id/privilege_title"
            android:layout_marginTop="@dimen/navi_dimens_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="10sp"
            android:textColor="#999999"/>


    <RelativeLayout
            android:id="@+id/privilege_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_0dp"
            android:layout_weight="1"
            android:gravity="center">

        <LinearLayout
                android:id="@+id/icons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

            <LinearLayout
                    android:id="@+id/icon_1_container"
                    android:layout_width="@dimen/navi_dimens_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/icon_1"
                        android:layout_width="@dimen/navi_dimens_26dp"
                        android:layout_height="@dimen/navi_dimens_26dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/icon_2_container"
                    android:layout_width="@dimen/navi_dimens_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="@dimen/navi_dimens_26dp"
                        android:layout_height="@dimen/navi_dimens_26dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/icon_3_container"
                    android:layout_width="@dimen/navi_dimens_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/icon_3"
                        android:layout_width="@dimen/navi_dimens_26dp"
                        android:layout_height="@dimen/navi_dimens_26dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/icon_4_container"
                    android:layout_width="@dimen/navi_dimens_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/icon_4"
                        android:layout_width="@dimen/navi_dimens_26dp"
                        android:layout_height="@dimen/navi_dimens_26dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
                android:id="@+id/shade"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_32dp"
                android:background="#ffffff"
                android:visibility="gone"
                android:alpha="0.6"/>

        <LinearLayout
                android:id="@+id/text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

            <TextView android:id="@+id/privilege_description"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:textSize="13sp"
                      android:textColor="#000000"/>

            <TextView android:id="@+id/privilege_due"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:visibility="gone"
                      android:layout_marginTop="@dimen/navi_dimens_6dp"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:textSize="10sp"
                      android:textColor="#000000"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/privilege_btn"
            android:layout_width="match_parent"
            android:background="@drawable/nsdk_navi_result_privilege_btn_selector"
            android:layout_height="@dimen/navi_dimens_30dp"
            android:gravity="center"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/privilege_btn_icon"
                android:layout_width="@dimen/navi_dimens_13dp"
                android:layout_height="@dimen/navi_dimens_13dp"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/navi_dimens_5dp"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/privilege_btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13sp"
                android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>