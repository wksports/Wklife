<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout 
        android:id="@+id/ll_loading_box"
        android:layout_width="@dimen/navi_dimens_220dp"
        android:layout_height="@dimen/navi_dimens_50dp"
        android:background="@drawable/nsdk_drawable_common_loading_box"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
        
        <LinearLayout 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="@dimen/navi_dimens_10dp" >
        	
            <ImageView
            	android:id="@+id/progress_cycle_normal"
	            android:layout_width="@dimen/navi_dimens_24dp"
	            android:layout_height="@dimen/navi_dimens_24dp"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/nsdk_drawable_rg_ic_locate_loading" />
	        <TextView
	            android:id="@+id/progress_tip_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textSize="16sp"
	            android:textColor="#313233"
	            android:layout_marginLeft="@dimen/navi_dimens_5dp"
	            android:text="正在重新规划路线..." />
        </LinearLayout>
        <ImageView
	            android:id="@+id/iv_dialog_close"
	            android:layout_width="@dimen/navi_dimens_20dp"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="@dimen/navi_dimens_5dp"
	            android:src="@drawable/nsdk_drawable_rg_quit_default" />
    </RelativeLayout>
    
</RelativeLayout>