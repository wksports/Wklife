<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="-17dp"
        android:background="@drawable/bnav_route_result_dynamic_card_no_arrow_1_left"
        android:paddingLeft="7dp"
        android:paddingRight="10dp"
        android:text="188公里"
        android:visibility="invisible"
        android:textColor="#3385FF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="-17dp"
        android:layout_toRightOf="@+id/icon"
        android:background="@drawable/bnav_route_result_dynamic_card_no_arrow_1_right"
        android:paddingLeft="10dp"
        android:paddingRight="7dp"
        android:text="188公里"
        android:textColor="#3385FF"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/text_left" />

</merge>
