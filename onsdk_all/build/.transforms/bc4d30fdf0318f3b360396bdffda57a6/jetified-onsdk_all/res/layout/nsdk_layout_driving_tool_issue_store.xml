<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nsdk_drawable_common_loading_box"
    android:gravity="center" >
    <Button 
        android:id="@+id/create_issue_btn"
        android:layout_width="@dimen/navi_dimens_70dp"
        android:layout_height="@dimen/navi_dimens_40dp"
        android:layout_marginLeft="@dimen/navi_dimens_40dp"
        android:layout_centerHorizontal="true"
        android:text="新问题"
        android:textColor="@color/nsdk_cl_text_a"
        android:background="#C7C7C7"
        android:textSize="10sp"
        />
    <LinearLayout
        android:id="@+id/issue_id_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_2dp"
        android:layout_below="@id/create_issue_btn"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/issue_id_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/nsdk_cl_text_a"
            android:text="问题编号"
            android:textSize="@dimen/nsdk_driving_tool_first_tx_size"
            />
        <Spinner
            android:id="@+id/issue_id_sp"
            android:layout_width="@dimen/nsdk_driving_tool_store_sp_width"
            android:layout_height="@dimen/nsdk_driving_tool_sp_height"
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/issue_desp_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issue_id_ll"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/issue_desp_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/nsdk_cl_text_a"
            android:text="问题描述"
            android:textSize="@dimen/nsdk_driving_tool_first_tx_size"
            />
        <EditText
            android:id="@+id/issue_desp_et"
            android:layout_width="@dimen/nsdk_driving_tool_store_sp_width"
            android:layout_height="@dimen/nsdk_driving_tool_sp_height"
            android:textSize="@dimen/nsdk_driving_tool_first_tx_size"
            android:singleLine="true"
            />
    </LinearLayout>    

    <LinearLayout
        android:id="@+id/issue_type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issue_desp_ll"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/issue_type_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="问题分类"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="@dimen/nsdk_driving_tool_first_tx_size"
            />
        <Spinner
            android:id="@+id/issue_type_sp"
            android:layout_width="@dimen/nsdk_driving_tool_store_sp_width"
            android:layout_height="@dimen/nsdk_driving_tool_sp_height"
            />        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/responsible_pm_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issue_type_ll"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/responsible_pm_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="责任产品"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="@dimen/nsdk_driving_tool_first_tx_size"
            />
        <Spinner
            android:id="@+id/responsible_pm_sp"
            android:layout_width="@dimen/nsdk_driving_tool_store_sp_width"
            android:layout_height="@dimen/nsdk_driving_tool_sp_height"
            />        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/current_state_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/responsible_pm_ll"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/current_state_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="目前状态"
            android:textColor="@color/nsdk_cl_text_a"
            android:textSize="@dimen/nsdk_driving_tool_first_tx_size"
            />
        <Spinner
            android:id="@+id/current_state_sp"
            android:layout_width="@dimen/nsdk_driving_tool_store_sp_width"
            android:layout_height="@dimen/nsdk_driving_tool_sp_height"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/add_attach_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_2dp"
        android:layout_below="@id/current_state_ll"
        android:orientation="horizontal"
        android:gravity="center">
        <Button 
            android:id="@+id/add_attch_btn"
            android:layout_width="@dimen/navi_dimens_80dp"
            android:layout_height="@dimen/navi_dimens_40dp"
            android:text="@string/nsdk_string_driving_tool_add_attach"
            android:textColor="@color/nsdk_cl_text_a"
            android:background="#C7C7C7"
            android:textSize="10sp"
            />
        <TextView 
            android:id="@+id/select_picture_tx"
            android:layout_width="@dimen/nsdk_driving_tool_add_attch"
            android:layout_height="@dimen/navi_dimens_40dp"
            android:text="图片数:0"
            android:gravity="center"
            android:textColor="@color/nsdk_cl_text_a"
            android:layout_marginLeft="@dimen/navi_dimens_20dp"
            android:textSize="10sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_attach_ll"
        android:layout_marginTop="@dimen/navi_dimens_2dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center">
      <Button 
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/navi_dimens_50dp"
        android:layout_height="@dimen/navi_dimens_40dp"
        android:text="取消"
          android:textColor="@color/nsdk_cl_text_a"
          android:background="#C7C7C7"
        android:gravity="center"
        android:textSize="10sp"
        />
    <Button 
        android:id="@+id/store_btn"
        android:layout_width="@dimen/navi_dimens_50dp"
        android:layout_height="@dimen/navi_dimens_40dp"
        android:layout_marginLeft="@dimen/navi_dimens_50dp"
        android:text="保存"
        android:textColor="@color/nsdk_cl_text_a"
        android:background="#C7C7C7"
        android:gravity="center"
        android:textSize="10sp"
        />
        
    </LinearLayout>

</RelativeLayout>
