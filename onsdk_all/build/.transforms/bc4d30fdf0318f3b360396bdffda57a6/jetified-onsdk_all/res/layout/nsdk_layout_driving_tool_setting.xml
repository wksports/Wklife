<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="@drawable/nsdk_drawable_common_loading_box"
    android:gravity="center" >
    
    <LinearLayout
        android:id="@+id/video_definity_ll" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频录制设置"
			android:textColor="@color/nsdk_cl_text_a"
            android:textSize="@dimen/nsdk_text_size_rg_second_info"
            />
        <ToggleButton 
            android:id="@+id/video_defination_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="高清"
            android:textOff="标清"
            android:textSize="@dimen/nsdk_text_size_rg_second_info"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/video_definity_ll"
        android:layout_marginTop="@dimen/navi_dimens_20dp"
        android:orientation="horizontal" >
        <TextView 
	        android:id="@+id/upload_material_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="上传路测素材"
			android:textColor="@color/nsdk_cl_text_a"
	        android:textSize="@dimen/nsdk_text_size_rg_second_info"
	        />
        <Button 
	        android:id="@+id/upload_material_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/upload_material_tx"
	        android:text="开启"
	        android:textSize="@dimen/nsdk_text_size_rg_second_info"
	        />
    </LinearLayout>

</RelativeLayout>
