<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="25dp">

    <ScrollView
        android:id="@+id/bnav_declare_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bnav_declare_disagree"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/bnav_phonedeclare_disagree"
            android:text="不同意"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bnav_declare_agree"
            android:layout_width="173dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="29dp"
            android:background="@drawable/bnav_phonedeclare_agree"
            android:text="同意"
            android:textColor="#3385ff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>