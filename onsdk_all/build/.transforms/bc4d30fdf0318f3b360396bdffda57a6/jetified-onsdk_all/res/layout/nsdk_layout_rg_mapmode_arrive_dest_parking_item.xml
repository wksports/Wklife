<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parking_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parking_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_92dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/navi_dimens_5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parking_first_line_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_25dp">

                <ImageView
                    android:id="@+id/parking_icon"
                    android:layout_width="@dimen/navi_dimens_20dp"
                    android:layout_height="@dimen/navi_dimens_20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/nsdk_drawable_arrive_dest_park_one_red" />

                <TextView
                    android:id="@+id/parking_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/navi_dimens_16dp"
                    android:textColor="@color/nsdk_cl_text_a"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    tools:text="百度国际大厦-停车场" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/parking_second_line_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/parking_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/navi_dimens_13dp"
                    android:textColor="@color/nsdk_cl_text_i"
                    tools:text="15空/100总" />

                <View
                    android:id="@+id/parking_split_one"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/nsdk_cl_bg_g"
                    android:layout_marginTop="@dimen/navi_dimens_5dp"
                    android:layout_marginBottom="@dimen/navi_dimens_5dp"
                    android:layout_marginLeft="@dimen/navi_dimens_4dp"
                    android:layout_marginRight="@dimen/navi_dimens_4dp" />

                <TextView
                    android:id="@+id/parking_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/navi_dimens_13dp"
                    android:textColor="@color/nsdk_cl_text_i"
                    tools:text="距您1.2km" />

                <View
                    android:id="@+id/parking_split_two"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/nsdk_cl_bg_g"
                    android:layout_marginTop="@dimen/navi_dimens_5dp"
                    android:layout_marginBottom="@dimen/navi_dimens_5dp"
                    android:layout_marginLeft="@dimen/navi_dimens_4dp"
                    android:layout_marginRight="@dimen/navi_dimens_4dp" />

                <TextView
                    android:id="@+id/parking_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/navi_dimens_13dp"
                    android:textColor="@color/nsdk_cl_text_i"
                    tools:text="4元/小时" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/parking_third_line_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/parking_label_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/navi_dimens_6dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/navi_dimens_3dp"
                    android:paddingRight="@dimen/navi_dimens_3dp"
                    android:paddingTop="@dimen/navi_dimens_1dp"
                    android:paddingBottom="@dimen/navi_dimens_1dp"
                    android:textSize="@dimen/navi_dimens_12dp"
                    android:textColor="@color/nsdk_color_rg_arrive_dest_park_desc"
                    android:background="@drawable/nsdk_drawable_rg_arrive_dest_park_desc"
                    android:text="车位充足" />

                <TextView
                    android:id="@+id/parking_label_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/navi_dimens_6dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/navi_dimens_3dp"
                    android:paddingRight="@dimen/navi_dimens_3dp"
                    android:paddingTop="@dimen/navi_dimens_1dp"
                    android:paddingBottom="@dimen/navi_dimens_1dp"
                    android:textSize="@dimen/navi_dimens_12dp"
                    android:textColor="@color/nsdk_cl_text_i"
                    android:background="@drawable/nsdk_drawable_rg_arrive_dest_park_normal"
                    android:text="地上" />

                <TextView
                    android:id="@+id/parking_label_reservable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/navi_dimens_3dp"
                    android:paddingRight="@dimen/navi_dimens_3dp"
                    android:paddingTop="@dimen/navi_dimens_1dp"
                    android:paddingBottom="@dimen/navi_dimens_1dp"
                    android:textSize="@dimen/navi_dimens_12dp"
                    android:textColor="@color/nsdk_cl_text_i"
                    android:background="@drawable/nsdk_drawable_rg_arrive_dest_park_normal"
                    android:text="预约" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/parking_goto"
            android:layout_width="@dimen/navi_dimens_35dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/navi_dimens_25dp"
                android:layout_height="@dimen/navi_dimens_25dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/nsdk_drawable_rg_arrive_dest_park_goto" />

            <TextView
                android:id="@+id/parking_goto_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/navi_dimens_3dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/navi_dimens_11dp"
                android:textColor="@color/nsdk_cl_text_i"
                android:text="到这去" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/parking_split_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/nsdk_cl_bg_b"
        android:visibility="visible" />

</LinearLayout>