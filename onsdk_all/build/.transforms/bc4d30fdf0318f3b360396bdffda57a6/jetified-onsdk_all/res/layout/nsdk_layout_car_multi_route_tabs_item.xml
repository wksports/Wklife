<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    tools:orientation="vertical">

    <TextView
        android:id="@+id/route_tab_item_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/nsdk_color_route_result_tab_traffic_info_selector"
        android:textSize="12dp"
        tools:text="方案一 距离短" />

    <TextView
        android:id="@+id/route_tab_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/nsdk_route_result_car_tab_time_selector"
        android:textSize="19dp"
        tools:text="时间" />


    <LinearLayout
        android:id="@+id/bottom_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/route_tab_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/nsdk_color_route_result_tab_traffic_info_selector"
            android:textSize="12dp"
            tools:text="distance" />

        <View
            android:id="@+id/divide_line1"
            android:layout_width="1px"
            android:layout_height="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/nsdk_color_route_result_route_tab_divide_line" />

        <TextView
            android:id="@+id/route_tab_item_traffic_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:drawableLeft="@drawable/nsdk_ic_route_result_traffic_light_selector"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/nsdk_color_route_result_tab_traffic_info_selector"
            android:textSize="12dp"
            android:visibility="visible"
            tools:text="12"
            tools:visibility="visible" />

        <View
            android:id="@+id/divide_line2"
            android:layout_width="1px"
            android:layout_height="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/nsdk_color_route_result_route_tab_divide_line" />

        <TextView
            android:id="@+id/route_tab_item_tolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:drawableLeft="@drawable/nsdk_ic_route_result_road_toll_selector"
            android:drawablePadding="1dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/nsdk_color_route_result_tab_traffic_info_selector"
            android:textSize="12dp"
            android:visibility="visible"
            tools:text="100"
            tools:visibility="visible" />
    </LinearLayout>

</merge>