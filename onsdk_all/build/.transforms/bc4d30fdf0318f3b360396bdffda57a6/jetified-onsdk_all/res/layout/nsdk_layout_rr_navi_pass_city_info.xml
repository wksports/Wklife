<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/detail_pass_city_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nsdk_rr_pass_road_right_big"
        android:visibility="visible"
        tools:visibility="gone">

        <TextView
            android:id="@+id/pass_city_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="石家庄"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="13dp" />

        <RelativeLayout
            android:id="@+id/route_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass_city_tx"
            android:layout_marginLeft="2dp">

            <TextView
                android:id="@+id/total_dis_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500公里"
                android:textColor="#555555"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/total_time_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@id/total_dis_tx"
                android:text="小时"
                android:textColor="#555555"
                android:textSize="12dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/line_tx"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/route_ll"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:background="#99b5b5b5" />

        <ImageView
            android:id="@+id/detail_climate_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_tx"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/nsdk_rr_bad_weather_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/climate_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_tx"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/detail_climate_img"
            android:text="天气"
            android:textColor="#555555"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/temprature_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_tx"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/climate_tx"
            android:text="温度"
            android:textColor="#555555"
            android:textSize="12dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/short_pass_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nsdk_rr_pass_road_right_small"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/short_pass_city_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="市"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            tools:text="成都市" />

        <ImageView
            android:id="@+id/climate_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/nsdk_rr_bad_weather_bg"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
