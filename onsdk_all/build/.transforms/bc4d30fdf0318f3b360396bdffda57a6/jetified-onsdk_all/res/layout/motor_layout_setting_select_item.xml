<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/nsdk_more_setting_menu_item_height"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/motor_setting_select_item_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/nsdk_drawable_common_ic_setting_right_arrow" />


    <TextView
        android:id="@+id/motor_setting_select_item_title"
        style="@style/MotorSettingItemTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        tools:text="@string/nsdk_bluetooth_panel_speaker_title" />

    <TextView
        android:id="@+id/motor_setting_select_item_selected_tip"
        style="@style/MotorSettingItemTipsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/motor_setting_select_item_right_arrow"
        android:layout_toRightOf="@id/motor_setting_select_item_title"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:paddingRight="@dimen/navi_dimens_20dp"
        android:visibility="gone"
        tools:text="@string/nsdk_bluetooth_panel_speaker_sub_title"
        tools:visibility="visible" />


</merge>