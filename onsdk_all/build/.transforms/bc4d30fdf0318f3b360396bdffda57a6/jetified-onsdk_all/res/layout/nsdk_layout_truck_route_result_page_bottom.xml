<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_bottom_panel_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.baidu.navisdk.module.routeresultbase.view.support.widgit.BNLinearLayout
        android:id="@+id/route_bottom_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <com.baidu.navisdk.module.routeresultbase.view.support.module.routetab.TruckRouteTabView
            android:id="@+id/route_tabs_view"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nsdk_drawable_route_result_tab_background" />

        <com.baidu.navisdk.module.trucknavi.view.panel.bottom.TruckRecyclerViewV2
            android:id="@+id/card_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </com.baidu.navisdk.module.routeresultbase.view.support.widgit.BNLinearLayout>

    <com.baidu.navisdk.ui.widget.BNLoadingView
        android:id="@+id/route_loading_view"
        android:layout_height="148dp"
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_marginRight="6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/nsdk_drawable_route_result_white_round_corner_bg"
        android:visibility="gone" />

</FrameLayout>