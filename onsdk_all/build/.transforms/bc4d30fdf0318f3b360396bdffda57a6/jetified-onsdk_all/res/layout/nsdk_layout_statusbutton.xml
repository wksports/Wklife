<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rbtngroup"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/navi_dimens_28dp"
    android:orientation="horizontal" >

    <RadioButton
        android:layout_width="@dimen/navi_dimens_56dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="-0.5dp"
        android:layout_marginRight="-0.5dp"
        android:background="@drawable/nsdk_drawable_statusbutton_left_button"
        android:button="@null"
        android:gravity="center"
        android:textColor="@drawable/nsdk_drawable_statusbutton_textcolor"
        android:textSize="12sp" />

    <RadioButton
        android:layout_width="@dimen/navi_dimens_56dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="-0.5dp"
        android:layout_marginRight="-0.5dp"
        android:background="@drawable/nsdk_drawable_statusbutton_mid_button"
        android:button="@null"
        android:gravity="center"
        android:textColor="@drawable/nsdk_drawable_statusbutton_textcolor"
        android:textSize="12sp" />

    <RadioButton
        android:layout_width="@dimen/navi_dimens_56dp"
        android:layout_height="match_parent"
        android:background="@drawable/nsdk_drawable_statusbutton_right_button"
        android:button="@null"
        android:gravity="center"
        android:textColor="@drawable/nsdk_drawable_statusbutton_textcolor"
        android:textSize="12sp" />
</RadioGroup>